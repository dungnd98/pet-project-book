extends ../layouts/commom.pug
block content
  h1.text-secondary.text-center.mb-3 Login
  if errors
    each error in errors
      .alert.alert-danger= error

  form(method="POST")
    .form-group
      label(for="email") Email
      input(type="text", name="email", class="form-control", value=values ?
      values.email : "")
      
    .form-group
      label(for="password") Password
      input(type="password", name="password", class="form-control", value=values ?
      values.password : "")
    button(class="btn btn-primary mb-2") Login