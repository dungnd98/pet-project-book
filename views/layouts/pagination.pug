nav(aria-label='Page navigation example')
  ul.pagination.justify-content-center
    li.page-item
      a.page-link(href='/users?page=1', aria-label='Previous')
        span(aria-hidden='true') &laquo;
    if(page == 1 || page ==2 || page ==3)
      li.page-item
        a.page-link(href='/users?page=1') 1
      li.page-item
        a.page-link(href='/users?page=2') 2
      li.page-item
        a.page-link(href='/users?page=3') 3
    else
      if(page < totalPage)
        li.page-item
          a.page-link(href=`/users?page=${page-1}` )=page-1
        li.page-item
          a.page-link(href=`/users?page=${page}`)=page
        li.page-item
          a.page-link(href=`/users?page=${page+1}`)=page+1
      else
        li.page-item
          a.page-link(href=`/users?page=${totalPage-2}` )=totalPage-2
        li.page-item
          a.page-link(href=`/users?page=${totalPage-1}`)=totalPage-1
        li.page-item
          a.page-link(href=`/users?page=${totalPage}`)=totalPage
    li.page-item
      a.page-link(href=`/users?page=${totalPage}`, aria-label='Next')
        span(aria-hidden='true') &raquo;
