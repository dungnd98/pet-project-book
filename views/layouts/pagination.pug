nav(aria-label='Page navigation example')
  ul.pagination.justify-content-center
    li.page-item
      a.page-link(href=`/${link}?page=1`, aria-label='Previous')
        span(aria-hidden='true') &laquo;
    if(page == 1 || page ==2 || page ==3)
      li.page-item
        a.page-link(href=`/${link}?page=1`) 1
      li.page-item
        a.page-link(href=`/${link}?page=2`) 2
      li.page-item
        a.page-link(href=`/${link}?page=3`) 3
    else
      if(page < totalPage)
        li.page-item
          a.page-link(href=`/${link}?page=${page-1}` )=page-1
        li.page-item
          a.page-link(href=`/${link}?page=${page}`)=page
        li.page-item
          a.page-link(href=`/${link}?page=${page+1}`)=page+1
      else
        li.page-item
          a.page-link(href=`/${link}?page=${totalPage-2}` )=totalPage-2
        li.page-item
          a.page-link(href=`/${link}?page=${totalPage-1}`)=totalPage-1
        li.page-item
          a.page-link(href=`/${link}?page=${totalPage}`)=totalPage
    li.page-item
      a.page-link(href=`/${link}?page=${totalPage}`, aria-label='Next')
        span(aria-hidden='true') &raquo;
