  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      a.navbar-brand(href='/users') BookStore
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item.active
            a.nav-link(href='/') Home
          li.nav-item
            a.nav-link(href='/books') Book
          if user && user.isAdmin
            li.nav-item
              a.nav-link(href='/users') Users
          else
            li.nav-item
              a.nav-link(href='/auth/login') Login
            li.nav-item
              a.nav-link(href='/books') Cart
                span=`(${countCart})`
          li.nav-item
              a.nav-link(href='/transactions') Transactions
      if user 
        a.mr-2(href='users/profile')= "Xin chao, " + user.name
        img.rounded-circle(src=user.avatarUrl, width=40, height=40)
    .container
      block content