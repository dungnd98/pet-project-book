extends ../layouts/commom.pug
block content
  h1.text-secondary.text-center.mb-3 Quan Ly Ban Doc
  a.btn.btn-primary.mb-2(href='/users/create') Create 
  table.table
    tr
      th Avatar
      th Name
      th SÄT
      th Delete
      th Update
    each user in users
      tr
        td
          img.rounded-circle(src=user.avatarUrl, width=40, height=40)
        td=user.name
        td=user.sdt
        td
          a(href="/users/"+ user.id +"/delete") Click
        td
          a(href="/users/" + user.id + "/update") Click
  include ../layouts/pagination.pug