extends ../layouts/commom.pug
block content
  h1.text-secondary.text-center.mb- Cap Nhat Avatar
  if errors
    each error in errors
      .alert.alert-danger= error
  form(action="/users/profile/avatar", method="POST", enctype="multipart/form-data")
    input(type="hidden", name="id", value = user.id)

    .form-group
      label Avatar
      p
        img.rounded(src=user.avatarUrl, width=100)

    .form-group
      label Avatar
      input(type="file", name="avatar", class="form-control-file")
    button.btn.btn-primary.mb-2 Sumbit